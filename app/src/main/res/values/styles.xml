<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
    </style>

    <style name="FAQQuestion">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <!--<item name="android:fontFamily">Roboto</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FAQAnswer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="ProductWeight">
        <item name="android:layout_width">@dimen/product_weight_btn_width</item>
        <item name="android:layout_height">@dimen/product_weight_btn_height</item>
        <item name="android:textSize">@dimen/product_weight_btn_text_size</item>
        <item name="android:padding">@dimen/product_weight_btn_padding</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="ProductQuantity" parent="ProductWeight">
    </style>
    <style name="space">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="navigationDrawerTitle">

        <item name="android:textColor">@color/grey_medium_dark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width"> android:layout_height</item>
        <item name="android:textAppearance"> ?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>
    <style name="navigationDrawerItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name=" android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="actionbarImages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
